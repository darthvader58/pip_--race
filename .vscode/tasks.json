{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run frontend (Vite)",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev",
				"--prefix",
				"frontend"
			],
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Install frontend deps",
			"type": "shell",
			"command": "npm",
			"args": [
				"ci",
				"--prefix",
				"frontend"
			],
			"group": "build"
		}
	]
}